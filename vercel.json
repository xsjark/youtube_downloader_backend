{
    "version": 2,
    "builds": [
      {
        "src": "./server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "./server.js",
        "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
      }
    ],
    "rewrites": [
      { "source": "/(.*)", "destination": "./server.js" }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          { "key": "Access-Control-Allow-Origin", "value": "*" }
        ]
      },
      {
        "source": "/youtube-downloader-backend-sepia.vercel.app/(.*)",
        "headers": [
          { "key": "Access-Control-Allow-Origin", "value": "https://youtube-downloader-backend-sepia.vercel.app" }
        ]
      }  
    ]
  }  